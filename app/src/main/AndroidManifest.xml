<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ntua.hci.mysecondandroidapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_hci2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_hci2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySecondAndroidApp">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySecondAndroidApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.list.ListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySecondAndroidApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

</application>

</manifest>